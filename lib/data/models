class CourseModel {
  final int id;
  final String title;
  final String instructor;
  final double progress;
  final String thumbnail;

  CourseModel({
    required this.id,
    required this.title,
    required this.instructor,
    required this.progress,
    required this.thumbnail,
  });

  // Fungsi untuk mengubah JSON dari API menjadi Object CourseModel
  factory CourseModel.fromJson(Map<String, dynamic> json) {
    return CourseModel(
      id: json['id'],
      title: json['title'],
      instructor: json['instructor'],
      progress: (json['progress'] as num).toDouble(),
      thumbnail: json['thumbnail'],
    );
  }

  // Fungsi untuk mengubah Object kembali ke JSON (jika perlu upload data)
  Map<String, dynamic> toJson() {
    return {
      'id': id,
      'title': title,
      'instructor': instructor,
      'progress': progress,
      'thumbnail': thumbnail,
    };
  }
}