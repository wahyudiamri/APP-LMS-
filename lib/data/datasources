abstract class CourseRemoteDataSource {
  Future<List<CourseModel>> getActiveCourses();
}

class CourseRemoteDataSourceImpl implements CourseRemoteDataSource {
  @override
  Future<List<CourseModel>> getActiveCourses() async {
    // Simulasi data dari API (Nantinya diganti dengan http.get)
    await Future.delayed(const Duration(seconds: 1)); 
    return [
      CourseModel(
        id: 1, 
        title: "Flutter Advanced UI", 
        instructor: "Arif Dev", 
        progress: 0.85, 
        thumbnail: "https://example.com/img1.jpg"
      ),
    ];
  }
}