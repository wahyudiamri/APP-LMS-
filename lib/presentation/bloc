import 'package:flutter_bloc/flutter_bloc.dart';
import '../../domain/entities/course.dart';
import '../../domain/usecases/get_my_courses.dart';

// Definisi State
abstract class CourseState {}
class CourseInitial extends CourseState {}
class CourseLoading extends CourseState {}
class CourseLoaded extends CourseState {
  final List<Course> courses;
  CourseLoaded(this.courses);
}

// Logic Cubit
class CourseCubit extends Cubit<CourseState> {
  final GetMyCourses getMyCourses;
  CourseCubit(this.getMyCourses) : super(CourseInitial());

  void fetchCourses() async {
    emit(CourseLoading());
    try {
      final result = await getMyCourses.execute();
      emit(CourseLoaded(result));
    } catch (e) {
      // Handle error state
    }
  }
}